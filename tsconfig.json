{
    "compilerOptions": {
      "target": "es2017",
      "module": "UMD",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "declaration": true,
      "outDir": "dist",
      "baseUrl": "src",
      "paths": {
        "*": ["/dist/*"]
      }
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist/"]
  }
